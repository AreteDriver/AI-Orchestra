#!/usr/bin/env python3
"""Gorgon CLI entry point.

Standalone entry point that avoids loading full test_ai package.
"""

import sys
from pathlib import Path

# Add src to path
src_path = Path(__file__).parent / "src"
sys.path.insert(0, str(src_path))

# Prevent test_ai __init__ from running by importing cli directly
import importlib.util

cli_path = src_path / "test_ai" / "cli" / "main.py"
spec = importlib.util.spec_from_file_location("cli_main", cli_path)
cli_module = importlib.util.module_from_spec(spec)
sys.modules["cli_main"] = cli_module
spec.loader.exec_module(cli_module)

if __name__ == "__main__":
    cli_module.app()
